<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp.Views.Edicao.EditarUsuarioPage"
             Title="Editar UsuÃ¡rio"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Frame Padding="20" 
                   CornerRadius="10" 
                   BackgroundColor="White"
                   HasShadow="True">
                <VerticalStackLayout Spacing="5">
                    <Label Text="âœï¸ Editar UsuÃ¡rio"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#FF9800"/>
                    <Label Text="Atualize os dados do usuÃ¡rio"
                           FontSize="14"
                           TextColor="#666"/>
                </VerticalStackLayout>
            </Frame>

            <!-- FormulÃ¡rio -->
            <Frame Padding="20" 
                   CornerRadius="10" 
                   BackgroundColor="White"
                   HasShadow="True">
                
                <VerticalStackLayout Spacing="15">

                    <!-- ID -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="ID" 
                               FontSize="14" 
                               TextColor="#999"
                               FontAttributes="Bold"/>
                        <Label x:Name="IdLabel"
                               Text="-"
                               FontSize="16"
                               TextColor="#333"/>
                    </VerticalStackLayout>

                    <BoxView HeightRequest="1" BackgroundColor="#E0E0E0"/>

                    <!-- Nome -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Nome Completo *" 
                               FontSize="14" 
                               TextColor="#333"
                               FontAttributes="Bold"/>
                        <Entry x:Name="NomeEntry"
                               Placeholder="Ex: Maria Santos"
                               TextColor="#333"
                               BackgroundColor="#F8F8F8"/>
                    </VerticalStackLayout>

                    <!-- Email -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="E-mail *" 
                               FontSize="14" 
                               TextColor="#333"
                               FontAttributes="Bold"/>
                        <Entry x:Name="EmailEntry"
                               Placeholder="maria.santos@lufh.com"
                               Keyboard="Email"
                               TextColor="#333"
                               BackgroundColor="#F8F8F8"/>
                    </VerticalStackLayout>

                    <!-- Tipo de UsuÃ¡rio -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Tipo de UsuÃ¡rio *" 
                               FontSize="14" 
                               TextColor="#333"
                               FontAttributes="Bold"/>
                        <Picker x:Name="TipoUsuarioPicker"
                                Title="Selecione o tipo"
                                TextColor="#333"
                                BackgroundColor="#F8F8F8">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>Admin</x:String>
                                    <x:String>Tecnico</x:String>
                                    <x:String>Coordenador</x:String>
                                    <x:String>Voluntario</x:String>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>
                    </VerticalStackLayout>

                    <!-- Resetar Senha -->
                    <Frame Padding="15" 
                           CornerRadius="8" 
                           BackgroundColor="#FFF3E0"
                           HasShadow="False">
                        <VerticalStackLayout Spacing="10">
                            <Label Text="ðŸ”‘ Resetar Senha"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#F57C00"/>
                            <Entry x:Name="NovaSenhaEntry"
                                   Placeholder="Nova senha (deixe em branco para nÃ£o alterar)"
                                   IsPassword="True"
                                   TextColor="#333"
                                   BackgroundColor="White"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Ativo -->
                    <HorizontalStackLayout Spacing="10">
                        <Switch x:Name="AtivoSwitch"/>
                        <Label Text="UsuÃ¡rio Ativo"
                               VerticalOptions="Center"
                               TextColor="#333"/>
                    </HorizontalStackLayout>

                    <BoxView HeightRequest="1" 
                             BackgroundColor="#E0E0E0" 
                             Margin="0,10,0,10"/>

                    <!-- BotÃµes -->
                    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">
                        
                        <Button Grid.Column="0"
                                Text="EXCLUIR"
                                Clicked="OnExcluirClicked"
                                BackgroundColor="#F44336"
                                TextColor="White"
                                CornerRadius="8"
                                HeightRequest="50"/>

                        <Button Grid.Column="1"
                                Text="CANCELAR"
                                Clicked="OnCancelarClicked"
                                BackgroundColor="#757575"
                                TextColor="White"
                                CornerRadius="8"
                                HeightRequest="50"/>

                        <Button Grid.Column="2"
                                Text="SALVAR"
                                Clicked="OnSalvarClicked"
                                BackgroundColor="#FF9800"
                                TextColor="White"
                                CornerRadius="8"
                                HeightRequest="50"/>
                    </Grid>

                </VerticalStackLayout>
            </Frame>

            <!-- Data de CriaÃ§Ã£o -->
            <Frame Padding="15" 
                   CornerRadius="8" 
                   BackgroundColor="#E3F2FD"
                   HasShadow="False">
                <HorizontalStackLayout Spacing="10">
                    <Label Text="ðŸ“…"
                           FontSize="18"/>
                    <VerticalStackLayout>
                        <Label Text="Data de Cadastro"
                               FontSize="12"
                               TextColor="#1976D2"/>
                        <Label x:Name="DataCriacaoLabel"
                               Text="-"
                               FontSize="14"
                               TextColor="#333"/>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>