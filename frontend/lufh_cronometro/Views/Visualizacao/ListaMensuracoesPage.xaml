                        </x:Array>
                    </Picker.ItemsSource>
                    <Picker.SelectedIndex>0</Picker.SelectedIndex>
                </Picker>
            </HorizontalStackLayout>
        </Frame>

        <!-- Lista -->
        <ScrollView Grid.Row="2">
            <VerticalStackLayout x:Name="ListaContainer" 
                                Padding="20,0,20,20" 
                                Spacing="15">
                <!-- Mensura√ß√µes ser√£o adicionadas aqui -->
            </VerticalStackLayout>
        </ScrollView>

        <!-- Loading/Empty State -->
        <Frame Grid.Row="2"
               x:Name="EmptyFrame"
               Padding="40"
               Margin="20"
               CornerRadius="10"
               BackgroundColor="White"
               VerticalOptions="Center"
               HasShadow="True"
               IsVisible="False">
            <VerticalStackLayout Spacing="15" HorizontalOptions="Center">
                <Label Text="üì≠"
