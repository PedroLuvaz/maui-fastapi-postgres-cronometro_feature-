<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp.Views.Visualizacao.ListaTestesPage"
             Title="Testes"
             BackgroundColor="#F5F5F5">

    <Grid RowDefinitions="Auto,Auto,*,Auto">

        <!-- Header -->
        <Frame Grid.Row="0" 
               Padding="20" 
               Margin="20,20,20,10"
               CornerRadius="10" 
               BackgroundColor="White"
               HasShadow="True">
            <Grid ColumnDefinitions="*,Auto">
                <VerticalStackLayout Grid.Column="0" Spacing="5">
                    <Label Text="ðŸ§ª Testes"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#1976D2"/>
                    <Label x:Name="TotalLabel"
                           Text="Carregando..."
                           FontSize="14"
                           TextColor="#666"/>
                </VerticalStackLayout>
                
                <Button Grid.Column="1"
                        Text="ðŸ”„"
                        Clicked="OnAtualizarClicked"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        CornerRadius="8"
                        WidthRequest="50"
                        HeightRequest="50"
                        VerticalOptions="Center"/>
            </Grid>
        </Frame>

        <!-- Busca -->
        <Frame Grid.Row="1" 
               Padding="15" 
               Margin="20,0,20,10"
               CornerRadius="10" 
               BackgroundColor="White"
               HasShadow="True">
            <SearchBar x:Name="BuscaSearchBar"
                       Placeholder="Buscar teste..."
                       TextChanged="OnBuscaTextChanged"
                       BackgroundColor="Transparent"/>
        </Frame>

        <!-- Lista -->
        <RefreshView Grid.Row="2" 
                     x:Name="RefreshView"
                     Refreshing="OnRefreshing"
                     Margin="20,0,20,10">
            <CollectionView x:Name="TestesCollectionView"
                           SelectionMode="Single"
                           SelectionChanged="OnTesteSelecionado">
                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center" Spacing="10">
                        <Label Text="ðŸ“­"
                               FontSize="60"
                               HorizontalOptions="Center"/>
                        <Label Text="Nenhum teste encontrado"
                               FontSize="16"
                               TextColor="#999"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="15" 
                               Margin="0,5" 
                               CornerRadius="10"
                               BackgroundColor="White"
                               HasShadow="True">
                            <Grid RowDefinitions="Auto,Auto" RowSpacing="10">
                                
                                <!-- Primeira Linha -->
                                <Grid Grid.Row="0" 
                                      ColumnDefinitions="Auto,*,Auto" 
                                      ColumnSpacing="15">
                                    
                                    <!-- Ãcone -->
                                    <Frame Grid.Column="0"
                                           WidthRequest="50"
                                           HeightRequest="50"
                                           CornerRadius="25"
                                           Padding="0"
                                           BackgroundColor="#E1F5FE"
                                           HasShadow="False">
                                        <Label Text="ðŸ§ª"
                                               FontSize="24"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"/>
                                    </Frame>

                                    <!-- Nome -->
                                    <VerticalStackLayout Grid.Column="1" 
                                                        VerticalOptions="Center" 
                                                        Spacing="3">
                                        <Label Text="{Binding Nome}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="#333"/>
                                        <Label Text="{Binding Produto.Nome}"
                                               FontSize="13"
                                               TextColor="#666"/>
                                    </VerticalStackLayout>

                                    <!-- Status/Seta -->
                                    <VerticalStackLayout Grid.Column="2" 
                                                        VerticalOptions="Center"
                                                        Spacing="5">
                                        <Label Text="â—"
                                               FontSize="12"
                                               TextColor="{Binding Ativo, Converter={StaticResource BoolToColorConverter}}"
                                               HorizontalOptions="Center"/>
                                        <Label Text="â€º"
                                               FontSize="30"
                                               TextColor="#CCC"
                                               HorizontalOptions="Center"/>
                                    </VerticalStackLayout>

                                </Grid>

                                <!-- Segunda Linha - Detalhes -->
                                <Grid Grid.Row="1" 
                                      ColumnDefinitions="*,*" 
                                      ColumnSpacing="10">
                                    
                                    <HorizontalStackLayout Grid.Column="0" Spacing="5">
                                        <Label Text="ðŸ‘¤"
                                               FontSize="12"
                                               VerticalOptions="Center"/>
                                        <Label Text="{Binding Cliente.Nome}"
                                               FontSize="11"
                                               TextColor="#999"
                                               VerticalOptions="Center"/>
                                    </HorizontalStackLayout>

                                    <HorizontalStackLayout Grid.Column="1" Spacing="5">
                                        <Label Text="ðŸ“…"
                                               FontSize="12"
                                               VerticalOptions="Center"/>
                                        <Label Text="{Binding DataCriacao, StringFormat='{0:dd/MM/yyyy}'}"
                                               FontSize="11"
                                               TextColor="#999"
                                               VerticalOptions="Center"/>
                                    </HorizontalStackLayout>

                                </Grid>

                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- RodapÃ© -->
        <Frame Grid.Row="3" 
               Padding="15" 
               Margin="0"
               CornerRadius="0"
               BackgroundColor="White"
               HasShadow="True"
               IsVisible="{Binding ModoEdicao}">
            <Label Text="ðŸ’¡ Toque em um teste para editar"
                   FontSize="13"
                   TextColor="#666"
                   HorizontalOptions="Center"/>
        </Frame>

    </Grid>
</ContentPage>