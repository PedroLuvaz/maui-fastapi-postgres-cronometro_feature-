<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp.Views.Cadastro.CadastroTestePage"
             Title="Cadastrar Teste"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Frame Padding="20" 
                   CornerRadius="10" 
                   BackgroundColor="White"
                   HasShadow="True">
                <VerticalStackLayout Spacing="5">
                    <Label Text="ðŸ§ª Novo Teste de Usabilidade"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#1976D2"/>
                    <Label Text="Configure um novo teste"
                           FontSize="14"
                           TextColor="#666"/>
                </VerticalStackLayout>
            </Frame>

            <!-- FormulÃ¡rio -->
            <Frame Padding="20" 
                   CornerRadius="10" 
                   BackgroundColor="White"
                   HasShadow="True">
                
                <VerticalStackLayout Spacing="15">

                    <!-- Nome -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Nome do Teste *" 
                               FontSize="14" 
                               TextColor="#333"
                               FontAttributes="Bold"/>
                        <Entry x:Name="NomeEntry"
                               Placeholder="Ex: Teste de NavegaÃ§Ã£o Sistema X"
                               TextColor="#333"
                               BackgroundColor="#F8F8F8"/>
                    </VerticalStackLayout>

                    <!-- Objetivo -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Objetivo do Teste" 
                               FontSize="14" 
                               TextColor="#333"
                               FontAttributes="Bold"/>
                        <Editor x:Name="ObjetivoEditor"
                                Placeholder="Descreva os objetivos..."
                                HeightRequest="100"
                                TextColor="#333"
                                BackgroundColor="#F8F8F8"/>
                    </VerticalStackLayout>

                    <!-- Cliente -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Cliente *" 
                               FontSize="14" 
                               TextColor="#333"
                               FontAttributes="Bold"/>
                        <Picker x:Name="ClientePicker"
                                Title="Selecione o cliente"
                                SelectedIndexChanged="OnClienteChanged"
                                TextColor="#333"
                                BackgroundColor="#F8F8F8"/>
                    </VerticalStackLayout>

                    <!-- Produto -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Produto *" 
                               FontSize="14" 
                               TextColor="#333"
                               FontAttributes="Bold"/>
                        <Picker x:Name="ProdutoPicker"
                                Title="Selecione o produto"
                                TextColor="#333"
                                BackgroundColor="#F8F8F8"
                                IsEnabled="False"/>
                    </VerticalStackLayout>

                    <!-- Coordenador -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Coordenador *" 
                               FontSize="14" 
                               TextColor="#333"
                               FontAttributes="Bold"/>
                        <Picker x:Name="CoordenadorPicker"
                                Title="Selecione o coordenador"
                                TextColor="#333"
                                BackgroundColor="#F8F8F8"/>
                    </VerticalStackLayout>

                    <BoxView HeightRequest="1" 
                             BackgroundColor="#E0E0E0" 
                             Margin="0,10,0,10"/>

                    <!-- BotÃµes -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        
                        <Button Grid.Column="0"
                                Text="CANCELAR"
                                Clicked="OnCancelarClicked"
                                BackgroundColor="#757575"
                                TextColor="White"
                                CornerRadius="8"
                                HeightRequest="50"/>

                        <Button Grid.Column="1"
                                Text="SALVAR"
                                Clicked="OnSalvarClicked"
                                BackgroundColor="#4CAF50"
                                TextColor="White"
                                CornerRadius="8"
                                HeightRequest="50"/>
                    </Grid>

                </VerticalStackLayout>
            </Frame>

            <!-- InformaÃ§Ãµes -->
            <Label Text="* Campos obrigatÃ³rios"
                   FontSize="12"
                   TextColor="#999"
                   Margin="0,0,0,20"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>