<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp.Views.Cadastro.CadastroClientePage"
             Title="Cadastrar Cliente"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Frame Padding="20" 
                   CornerRadius="10" 
                   BackgroundColor="White"
                   HasShadow="True">
                <VerticalStackLayout Spacing="5">
                    <Label Text="ðŸ“‹ Novo Cliente"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#1976D2"/>
                    <Label Text="Preencha os dados do cliente"
                           FontSize="14"
                           TextColor="#666"/>
                </VerticalStackLayout>
            </Frame>

            <!-- FormulÃ¡rio -->
            <Frame Padding="20" 
                   CornerRadius="10" 
                   BackgroundColor="White"
                   HasShadow="True">
                
                <VerticalStackLayout Spacing="15">

                    <!-- Nome -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Nome Completo *" 
                               FontSize="14" 
                               TextColor="#333"
                               FontAttributes="Bold"/>
                        <Entry x:Name="NomeEntry"
                               Placeholder="Ex: JoÃ£o Silva"
                               TextColor="#333"
                               BackgroundColor="#F8F8F8"/>
                    </VerticalStackLayout>

                    <!-- Email -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="E-mail" 
                               FontSize="14" 
                               TextColor="#333"
                               FontAttributes="Bold"/>
                        <Entry x:Name="EmailEntry"
                               Placeholder="joao.silva@empresa.com"
                               Keyboard="Email"
                               TextColor="#333"
                               BackgroundColor="#F8F8F8"/>
                    </VerticalStackLayout>

                    <!-- Telefone -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Telefone" 
                               FontSize="14" 
                               TextColor="#333"
                               FontAttributes="Bold"/>
                        <Entry x:Name="TelefoneEntry"
                               Placeholder="(00) 00000-0000"
                               Keyboard="Telephone"
                               TextColor="#333"
                               BackgroundColor="#F8F8F8"/>
                    </VerticalStackLayout>

                    <!-- Empresa -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Empresa" 
                               FontSize="14" 
                               TextColor="#333"
                               FontAttributes="Bold"/>
                        <Entry x:Name="EmpresaEntry"
                               Placeholder="Nome da empresa"
                               TextColor="#333"
                               BackgroundColor="#F8F8F8"/>
                    </VerticalStackLayout>

                    <BoxView HeightRequest="1" 
                             BackgroundColor="#E0E0E0" 
                             Margin="0,10,0,10"/>

                    <!-- BotÃµes -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        
                        <Button Grid.Column="0"
                                Text="CANCELAR"
                                Clicked="OnCancelarClicked"
                                BackgroundColor="#757575"
                                TextColor="White"
                                CornerRadius="8"
                                HeightRequest="50"/>

                        <Button Grid.Column="1"
                                Text="SALVAR"
                                Clicked="OnSalvarClicked"
                                BackgroundColor="#4CAF50"
                                TextColor="White"
                                CornerRadius="8"
                                HeightRequest="50"/>
                    </Grid>

                </VerticalStackLayout>
            </Frame>

            <!-- InformaÃ§Ãµes -->
            <Label Text="* Campos obrigatÃ³rios"
                   FontSize="12"
                   TextColor="#999"
                   Margin="0,0,0,20"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>