<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LUFH_Cronometro.MainPage"
             Title="Menu Principal">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Label 
                Text="LUFH - Menu Principal"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Button 
                Text="Clientes"
                Clicked="OnClientesClicked"
                HorizontalOptions="Center" />

            <Button 
                Text="Produtos"
                Clicked="OnProdutosClicked"
                HorizontalOptions="Center" />

            <Button 
                Text="Testes"
                Clicked="OnTestesClicked"
                HorizontalOptions="Center" />

            <Button 
                Text="Mensurações"
                Clicked="OnMensuracoesClicked"
                HorizontalOptions="Center" />

            <Button 
                Text="Usuários"
                Clicked="OnUsuariosClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
